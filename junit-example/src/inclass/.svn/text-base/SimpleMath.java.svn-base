package inclass;

public class SimpleMath {

	
	public int add (int x, int y){
		return x+y;
	}
	

	/**
	 * This method returns the summation of 1+2+3+ .... +n
	 * @param n the highest integer upto which we sum starting from 1
	 * @return the summange of 1+2+3+...+n
	 */
	public int recursiveSum(int n){
		if (n == 1)
			return 1;
		else
			return n + recursiveSum (n-1);
	}

	
	
	
}
 